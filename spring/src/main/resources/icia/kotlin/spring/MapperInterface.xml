<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="icia.kotlin.spring.MapperInterface"> <!-- 상속받기위해 -->
    <select id="idCheck" resultType="int">
      SELECT COUNT(*) FROM ST WHERE ST_ID= #{mId}
    </select>
    
    <select id="accessInfoCheck" resultType="int">
     SELECT COUNT(*) FROM ST WHERE ST_ID= #{mId} AND ST_PASSWORD= #{mPwd}
    </select>
    
        <select id="showMember" resultType="icia.kotlin.beans.member">
     SELECT ST_ID AS mId ,ST_NAME AS mName ,ST_PHONE AS mPhone FROM ST WHERE ST_ID = #{mId}
    </select>

 </mapper>

